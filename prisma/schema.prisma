generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  email String @unique
  name String
  password String
  createdAt DateTime @default(now())

  jobs Job[]
}

model Job {
  id String @id @default(cuid())
  title String
  company String
  location String
  status JobStatus 

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

enum JobStatus {
  APPLIED
  INTERVIEW
  OFFERED
  REJECTED
  WITHDRAWN
}